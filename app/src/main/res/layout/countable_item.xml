<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/linear_margin_top"
    android:orientation="horizontal">
    
    <RelativeLayout
        android:layout_width="@dimen/relative_layout_width"
        android:layout_height="@dimen/relative_layout_height"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/relative_layout_margin_start">
        
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count"
            android:layout_alignParentBottom="true"
            android:text="@string/text_view_text"
            android:textSize="@dimen/text_view_textSize"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/linear_margin_start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

</LinearLayout>